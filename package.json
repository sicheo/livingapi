{
  "name": "livingapi",
  "version": "1.0.0",
  "description": "Living integration API",
  "main": "apisrv.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:unit": "jest",
    "build": "tsc && npm run copy",
    "copy": "npx ncp src/conf/key.pem lib/src/conf/key.pem && npx ncp src/conf/aiq.pem lib/src/conf/aiq.pem && npx ncp src/conf/pkliving.key lib/src/conf/pkliving.key",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint \"src/**\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "testsrv": "node --trace-warnings lib/src/utility/start.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sicheo/livingapi.git"
  },
  "keywords": [
    "REST",
    "typescript",
    "convergence"
  ],
  "author": "P. Pulicani",
  "license": "MIT",
  "homepage": "https://github.com/sicheo/livingapi",
  "dependencies": {
    "@convergence/jwt-util": "^0.2.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "http": "0.0.1-security",
    "https": "^1.0.0",
    "lodash": "^4.17.21",
    "log4js": "^6.3.0",
    "morgan": "^1.10.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "supertest": "^6.1.3",
    "typescript-rest": "^3.0.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.11",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.0.1",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "elint": "^2.0.1",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "ncp": "^2.0.0",
    "ts-jest": "^27.0.3",
    "typedoc": "^0.21.2",
    "typescript": "^4.3.5"
  }
}
